<% include ../partials/header %>

<div class="container bg-main jumbotron">
  <div class="row">
    <h1>Create a new campground</h1>
    <form action="/campgrounds" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="name" required>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image url" required>
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="price" placeholder="price"
        min="0.00" step="0.01" required>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="description" required>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submmit</button>
      </div>
    </form>
    <p>
      <br><br>
      <a class="btn btn-sm btn-default" href="/campgrounds">Go back</a>
    </p>
  </div>
</div>


<% include ../partials/footer %>
